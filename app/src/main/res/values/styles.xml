<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/viewBg</item>
    </style>

    <style
        name="MyToolbarTheme"
        parent="@style/Theme.AppCompat">
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="android:windowTitleSize">20dp</item>
    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title." parent="Widget.AppCompat.ActionBar">

    </style>

    <style name="colorPrimaryViolet" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimaryDark">@color/primary_dark_material_dark_1</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

</resources>
